# .env for student-app

# Uncomment the API base URL you want to use

# For production (Google Cloud Run)
# API_BASE_URL=https://tiffin-wale.de.r.appspot.com

# For production (Custom Domain)
# API_BASE_URL=https://api.tiffin-wale.com

# For local development
API_BASE_URL=http://127.0.0.1:3001

# RazorPay Configuration
# Get these from your RazorPay Dashboard: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# RazorPay Webhook Secret (for backend verification)
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# Cloudinary Configuration
# Get these from your Cloudinary Dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_UPLOAD_PRESET=your_upload_preset_name