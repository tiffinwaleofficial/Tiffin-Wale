<div class="container">
  <div class="report-header">
    <h1>Partner Financial Report</h1>
    <p class="report-date">Generated on: {{generationDate}}</p>
    <p class="report-period">Report Period: {{reportPeriod}}</p>
  </div>

  <!-- Executive Summary -->
  <div class="section executive-summary">
    <h2>Executive Summary</h2>
    <div class="metrics-grid">
      <div class="metric-card">
        <div class="metric-label">Total Partners</div>
        <div class="metric-value">{{summary.totalPartners}}</div>
      </div>
      <div class="metric-card">
        <div class="metric-label">Active Partners</div>
        <div class="metric-value">{{summary.activePartners}}</div>
      </div>
      <div class="metric-card">
        <div class="metric-label">Total Company Revenue</div>
        <div class="metric-value">{{formatCurrency summary.totalCompanyRevenue}}</div>
      </div>
      <div class="metric-card">
        <div class="metric-label">Total Partner Payouts</div>
        <div class="metric-value">{{formatCurrency summary.totalPartnerPayouts}}</div>
      </div>
      <div class="metric-card">
        <div class="metric-label">Net Profit</div>
        <div class="metric-value">{{formatCurrency summary.netProfit}}</div>
      </div>
      <div class="metric-card">
        <div class="metric-label">Profit Margin</div>
        <div class="metric-value">{{summary.profitMargin}}%</div>
      </div>
    </div>
  </div>

  <!-- Partner Metrics -->
  <div class="section partner-metrics">
    <h2>Partner Metrics</h2>
    <div class="metrics-table">
      <table>
        <thead>
          <tr>
            <th>Period</th>
            <th>New Partners</th>
            <th>Total Revenue</th>
            <th>Total Orders</th>
            <th>Growth %</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><strong>Current Month</strong></td>
            <td>{{metrics.currentMonth.newPartners}}</td>
            <td>{{formatCurrency metrics.currentMonth.totalRevenue}}</td>
            <td>{{metrics.currentMonth.totalOrders}}</td>
            <td class="positive">+{{metrics.currentMonth.growthPercent}}%</td>
          </tr>
          <tr>
            <td><strong>Last Month</strong></td>
            <td>{{metrics.lastMonth.newPartners}}</td>
            <td>{{formatCurrency metrics.lastMonth.totalRevenue}}</td>
            <td>{{metrics.lastMonth.totalOrders}}</td>
            <td>{{metrics.lastMonth.growthPercent}}%</td>
          </tr>
          {{#each metrics.past3Months}}
          <tr>
            <td><strong>{{month}}</strong></td>
            <td>{{newPartners}}</td>
            <td>{{formatCurrency totalRevenue}}</td>
            <td>{{totalOrders}}</td>
            <td>{{growthPercent}}%</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Financial Metrics -->
  <div class="section financial-metrics">
    <h2>Financial Metrics</h2>
    <div class="financial-grid">
      <div class="financial-item">
        <div class="financial-label">Total Company Revenue</div>
        <div class="financial-value">{{formatCurrency financialMetrics.totalCompanyRevenue}}</div>
      </div>
      <div class="financial-item">
        <div class="financial-label">Total Partner Payouts</div>
        <div class="financial-value">{{formatCurrency financialMetrics.totalPartnerPayouts}}</div>
      </div>
      <div class="financial-item">
        <div class="financial-label">GST Collected (18%)</div>
        <div class="financial-value">{{formatCurrency financialMetrics.gstCollected}}</div>
      </div>
      <div class="financial-item">
        <div class="financial-label">Other Taxes</div>
        <div class="financial-value">{{formatCurrency financialMetrics.otherTaxes}}</div>
      </div>
      <div class="financial-item">
        <div class="financial-label">Net Revenue</div>
        <div class="financial-value">{{formatCurrency financialMetrics.netRevenue}}</div>
      </div>
      <div class="financial-item">
        <div class="financial-label">Operating Costs</div>
        <div class="financial-value">{{formatCurrency financialMetrics.operatingCosts}}</div>
      </div>
      <div class="financial-item {{#if (gt financialMetrics.netProfit 0)}}positive{{else}}negative{{/if}}">
        <div class="financial-label">Net Profit</div>
        <div class="financial-value">{{formatCurrency financialMetrics.netProfit}}</div>
      </div>
      <div class="financial-item {{#if (gt financialMetrics.profitMargin 0)}}positive{{else}}negative{{/if}}">
        <div class="financial-label">Profit Margin</div>
        <div class="financial-value">{{financialMetrics.profitMargin}}%</div>
      </div>
    </div>
  </div>

  <!-- Cost Analysis -->
  <div class="section cost-analysis">
    <h2>Cost Analysis</h2>
    <table>
      <thead>
        <tr>
          <th>Cost Category</th>
          <th>Amount</th>
          <th>Percentage of Revenue</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><strong>Customer Acquisition Cost (CAC)</strong></td>
          <td>{{formatCurrency costAnalysis.cac}}</td>
          <td>{{formatPercent costAnalysis.cacPercent}}</td>
          <td>Total marketing spend / New customers acquired</td>
        </tr>
        <tr>
          <td><strong>Advertisement Expenses</strong></td>
          <td>{{formatCurrency costAnalysis.advertisementExpenses}}</td>
          <td>{{formatPercent costAnalysis.advertisementPercent}}</td>
          <td>Monthly advertising and promotional costs</td>
        </tr>
        <tr>
          <td><strong>Marketing Costs</strong></td>
          <td>{{formatCurrency costAnalysis.marketingCosts}}</td>
          <td>{{formatPercent costAnalysis.marketingPercent}}</td>
          <td>Other marketing and promotional expenses</td>
        </tr>
        <tr>
          <td><strong>Operational Costs</strong></td>
          <td>{{formatCurrency costAnalysis.operationalCosts}}</td>
          <td>{{formatPercent costAnalysis.operationalPercent}}</td>
          <td>Platform maintenance, support, and operations</td>
        </tr>
        <tr class="total-row">
          <td><strong>Total Operating Costs</strong></td>
          <td><strong>{{formatCurrency costAnalysis.totalOperatingCosts}}</strong></td>
          <td><strong>{{formatPercent costAnalysis.totalPercent}}</strong></td>
          <td></td>
        </tr>
      </tbody>
    </table>

    <h3>Monthly Advertisement Breakdown</h3>
    <table>
      <thead>
        <tr>
          <th>Month</th>
          <th>Advertisement Spend</th>
          <th>New Customers</th>
          <th>CAC</th>
        </tr>
      </thead>
      <tbody>
        {{#each costAnalysis.monthlyAdvertisementBreakdown}}
        <tr>
          <td>{{month}}</td>
          <td>{{formatCurrency advertisementSpend}}</td>
          <td>{{newCustomers}}</td>
          <td>{{formatCurrency cac}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Per Partner Breakdown -->
  <div class="section per-partner-breakdown">
    <h2>Per Partner Financial Breakdown</h2>
    <table>
      <thead>
        <tr>
          <th>Partner ID</th>
          <th>Business Name</th>
          <th>Cash Burn/Month</th>
          <th>Avg Order Value</th>
          <th>Total Orders</th>
          <th>Total Revenue</th>
          <th>Partner Share</th>
          <th>Company Share</th>
          <th>Commission Earned</th>
        </tr>
      </thead>
      <tbody>
        {{#each perPartnerBreakdown}}
        <tr>
          <td>{{partnerId}}</td>
          <td>{{businessName}}</td>
          <td>{{formatCurrency cashBurnPerMonth}}</td>
          <td>{{formatCurrency avgOrderValue}}</td>
          <td>{{totalOrders}}</td>
          <td>{{formatCurrency totalRevenue}}</td>
          <td>{{formatCurrency partnerShare}}</td>
          <td>{{formatCurrency companyShare}}</td>
          <td>{{formatCurrency commissionEarned}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Analytics Tables Section -->
  <div class="section analytics-section">
    <h2>Analytics Data</h2>
    
    <div class="table-container">
      <h3>Partner Onboarding Trend (Past 3 Months)</h3>
      <table>
        <thead>
          <tr>
            <th>Month</th>
            <th>New Partners</th>
          </tr>
        </thead>
        <tbody>
          {{#each charts.partnerOnboarding.labels}}
          <tr>
            <td>{{this}}</td>
            <td>{{lookup ../charts.partnerOnboarding.data @index}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="table-container">
      <h3>Revenue Trend (Company vs Partners)</h3>
      <table>
        <thead>
          <tr>
            <th>Month</th>
            <th>Company Revenue (₹)</th>
            <th>Partner Revenue (₹)</th>
          </tr>
        </thead>
        <tbody>
          {{#each charts.revenueTrend.labels}}
          <tr>
            <td>{{this}}</td>
            <td>{{formatCurrency (lookup ../charts.revenueTrend.companyData @index)}}</td>
            <td>{{formatCurrency (lookup ../charts.revenueTrend.partnerData @index)}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="table-container">
      <h3>Revenue Distribution (Company vs Partners)</h3>
      <table>
        <thead>
          <tr>
            <th>Category</th>
            <th>Amount (₹)</th>
          </tr>
        </thead>
        <tbody>
          {{#each charts.revenueDistribution.labels}}
          <tr>
            <td>{{this}}</td>
            <td>{{formatCurrency (lookup ../charts.revenueDistribution.data @index)}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="table-container">
      <h3>Cost Breakdown</h3>
      <table>
        <thead>
          <tr>
            <th>Cost Category</th>
            <th>Amount (₹)</th>
          </tr>
        </thead>
        <tbody>
          {{#each charts.costBreakdown.labels}}
          <tr>
            <td>{{this}}</td>
            <td>{{formatCurrency (lookup ../charts.costBreakdown.data @index)}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="table-container">
      <h3>Profit Margin Trend</h3>
      <table>
        <thead>
          <tr>
            <th>Month</th>
            <th>Profit Margin (%)</th>
          </tr>
        </thead>
        <tbody>
          {{#each charts.profitMargin.labels}}
          <tr>
            <td>{{this}}</td>
            <td>{{lookup ../charts.profitMargin.data @index}}%</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Partner List Table -->
  <div class="section partner-list">
    <h2>Partner Details</h2>
    <table class="partner-table">
      <thead>
        <tr>
          <th>Partner ID</th>
          <th>Business Name</th>
          <th>Owner Name</th>
          <th>Address</th>
          <th>Onboarding Date</th>
          <th>Status</th>
          <th>Total Orders</th>
          <th>Total Revenue</th>
          <th>Partner Share</th>
          <th>Company Share</th>
          <th>GST Breakdown</th>
        </tr>
      </thead>
      <tbody>
        {{#each partners}}
        <tr>
          <td>{{partnerId}}</td>
          <td>{{businessName}}</td>
          <td>{{ownerName}}</td>
          <td>{{address}}</td>
          <td>{{onboardingDate}}</td>
          <td><span class="status-badge status-{{status}}">{{status}}</span></td>
          <td>{{totalOrders}}</td>
          <td>{{formatCurrency totalRevenue}}</td>
          <td>{{formatCurrency partnerShare}}</td>
          <td>{{formatCurrency companyShare}}</td>
          <td>{{formatCurrency gstBreakdown}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Company Financial Results Breakdown -->
  <div class="section company-results">
    <h2>Tiffin Wale Company Financial Results Breakdown</h2>
    
    <div class="company-results-grid">
      <div class="results-section">
        <h3>Revenue Breakdown</h3>
        <table>
          <thead>
            <tr>
              <th>Category</th>
              <th>Amount (₹)</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><strong>Total Company Revenue</strong></td>
              <td><strong>{{formatCurrency financialMetrics.totalCompanyRevenue}}</strong></td>
            </tr>
            <tr>
              <td>Total Partner Payouts</td>
              <td>{{formatCurrency financialMetrics.totalPartnerPayouts}}</td>
            </tr>
            <tr>
              <td>GST Collected (18%)</td>
              <td>{{formatCurrency financialMetrics.gstCollected}}</td>
            </tr>
            <tr>
              <td>Other Taxes</td>
              <td>{{formatCurrency financialMetrics.otherTaxes}}</td>
            </tr>
            <tr>
              <td><strong>Net Revenue</strong></td>
              <td><strong>{{formatCurrency financialMetrics.netRevenue}}</strong></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="results-section">
        <h3>Cost Breakdown</h3>
        <table>
          <thead>
            <tr>
              <th>Category</th>
              <th>Amount (₹)</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Customer Acquisition Cost (CAC)</td>
              <td>{{formatCurrency costAnalysis.cac}}</td>
            </tr>
            <tr>
              <td>Advertisement Expenses</td>
              <td>{{formatCurrency costAnalysis.advertisementExpenses}}</td>
            </tr>
            <tr>
              <td>Marketing Costs</td>
              <td>{{formatCurrency costAnalysis.marketingCosts}}</td>
            </tr>
            <tr>
              <td>Operational Costs</td>
              <td>{{formatCurrency costAnalysis.operationalCosts}}</td>
            </tr>
            <tr>
              <td><strong>Total Operating Costs</strong></td>
              <td><strong>{{formatCurrency costAnalysis.totalOperatingCosts}}</strong></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="final-summary">
      <table class="summary-table">
        <thead>
          <tr>
            <th>Financial Metric</th>
            <th>Amount (₹)</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><strong>Total Company Revenue</strong></td>
            <td><strong>{{formatCurrency financialMetrics.totalCompanyRevenue}}</strong></td>
          </tr>
          <tr>
            <td>Less: Total Partner Payouts</td>
            <td>({{formatCurrency financialMetrics.totalPartnerPayouts}})</td>
          </tr>
          <tr>
            <td>Less: GST Collected</td>
            <td>({{formatCurrency financialMetrics.gstCollected}})</td>
          </tr>
          <tr>
            <td>Less: Other Taxes</td>
            <td>({{formatCurrency financialMetrics.otherTaxes}})</td>
          </tr>
          <tr>
            <td><strong>Net Revenue</strong></td>
            <td><strong>{{formatCurrency financialMetrics.netRevenue}}</strong></td>
          </tr>
          <tr>
            <td>Less: Operating Costs</td>
            <td>({{formatCurrency financialMetrics.operatingCosts}})</td>
          </tr>
          <tr class="final-row {{#if (gt financialMetrics.netProfit 0)}}positive{{else}}negative{{/if}}">
            <td><strong>Net Profit / (Loss)</strong></td>
            <td><strong>{{formatCurrency financialMetrics.netProfit}}</strong></td>
          </tr>
          <tr>
            <td><strong>Profit Margin</strong></td>
            <td><strong>{{financialMetrics.profitMargin}}%</strong></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


