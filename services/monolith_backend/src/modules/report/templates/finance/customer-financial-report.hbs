<div class="container">
  <div class="report-header">
    <h1>Customer Financial Report</h1>
    <p class="report-date">Generated on: {{generationDate}}</p>
    <p class="report-period">Report Period: {{reportPeriod}}</p>
  </div>

  <!-- Executive Summary -->
  <div class="section executive-summary">
    <h2>Executive Summary</h2>
    <div class="metrics-grid">
      <div class="metric-card">
        <div class="metric-label">Total Users</div>
        <div class="metric-value">{{summary.totalUsers}}</div>
      </div>
      <div class="metric-card">
        <div class="metric-label">Active Subscriptions</div>
        <div class="metric-value">{{summary.activeSubscriptions}}</div>
      </div>
      <div class="metric-card">
        <div class="metric-label">Total Revenue</div>
        <div class="metric-value">{{formatCurrency summary.totalRevenue}}</div>
      </div>
      <div class="metric-card">
        <div class="metric-label">GST Collected (18%)</div>
        <div class="metric-value">{{formatCurrency summary.gstCollected}}</div>
      </div>
      <div class="metric-card">
        <div class="metric-label">Net Revenue</div>
        <div class="metric-value">{{formatCurrency summary.netRevenue}}</div>
      </div>
      <div class="metric-card">
        <div class="metric-label">Current Month Revenue</div>
        <div class="metric-value">{{formatCurrency summary.currentMonthRevenue}}</div>
      </div>
    </div>
  </div>

  <!-- Subscription Metrics -->
  <div class="section subscription-metrics">
    <h2>Subscription Metrics</h2>
    <div class="metrics-table">
      <table>
        <thead>
          <tr>
            <th>Period</th>
            <th>New Subscriptions</th>
            <th>Users Onboarded</th>
            <th>Revenue</th>
            <th>Growth %</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><strong>Current Month</strong></td>
            <td>{{metrics.currentMonth.newSubscriptions}}</td>
            <td>{{metrics.currentMonth.usersOnboarded}}</td>
            <td>{{formatCurrency metrics.currentMonth.revenue}}</td>
            <td class="positive">+{{metrics.currentMonth.growthPercent}}%</td>
          </tr>
          <tr>
            <td><strong>Last Month</strong></td>
            <td>{{metrics.lastMonth.newSubscriptions}}</td>
            <td>{{metrics.lastMonth.usersOnboarded}}</td>
            <td>{{formatCurrency metrics.lastMonth.revenue}}</td>
            <td>{{metrics.lastMonth.growthPercent}}%</td>
          </tr>
          {{#each metrics.past3Months}}
          <tr>
            <td><strong>{{month}}</strong></td>
            <td>{{newSubscriptions}}</td>
            <td>{{usersOnboarded}}</td>
            <td>{{formatCurrency revenue}}</td>
            <td>{{growthPercent}}%</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Revenue Breakdown -->
  <div class="section revenue-breakdown">
    <h2>Revenue Breakdown</h2>
    <div class="revenue-grid">
      <div class="revenue-item">
        <div class="revenue-label">Total Revenue (All Time)</div>
        <div class="revenue-value">{{formatCurrency revenueBreakdown.totalRevenue}}</div>
      </div>
      <div class="revenue-item">
        <div class="revenue-label">GST Collected (18%)</div>
        <div class="revenue-value">{{formatCurrency revenueBreakdown.gstCollected}}</div>
      </div>
      <div class="revenue-item">
        <div class="revenue-label">Net Revenue (After GST)</div>
        <div class="revenue-value">{{formatCurrency revenueBreakdown.netRevenue}}</div>
      </div>
    </div>
    
    <h3>Revenue by Plan Type</h3>
    <table>
      <thead>
        <tr>
          <th>Plan Name</th>
          <th>Subscribers</th>
          <th>Monthly Revenue</th>
          <th>Total Revenue</th>
          <th>Percentage</th>
        </tr>
      </thead>
      <tbody>
        {{#each revenueBreakdown.byPlanType}}
        <tr>
          <td>{{planName}}</td>
          <td>{{subscribers}}</td>
          <td>{{formatCurrency monthlyRevenue}}</td>
          <td>{{formatCurrency totalRevenue}}</td>
          <td>{{percentage}}%</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Analytics Tables Section -->
  <div class="section analytics-section">
    <h2>Analytics Data</h2>
    
    <div class="table-container">
      <h3>Subscription Trend (Past 3 Months)</h3>
      <table>
        <thead>
          <tr>
            <th>Month</th>
            <th>New Subscriptions</th>
          </tr>
        </thead>
        <tbody>
          {{#each charts.subscriptionTrend.labels}}
          <tr>
            <td>{{this}}</td>
            <td>{{lookup ../charts.subscriptionTrend.data @index}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="table-container">
      <h3>Monthly Revenue Breakdown</h3>
      <table>
        <thead>
          <tr>
            <th>Month</th>
            <th>Revenue (â‚¹)</th>
          </tr>
        </thead>
        <tbody>
          {{#each charts.revenueBar.labels}}
          <tr>
            <td>{{this}}</td>
            <td>{{formatCurrency (lookup ../charts.revenueBar.data @index)}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="table-container">
      <h3>Plan Distribution</h3>
      <table>
        <thead>
          <tr>
            <th>Plan Name</th>
            <th>Subscribers</th>
          </tr>
        </thead>
        <tbody>
          {{#each charts.planDistribution.labels}}
          <tr>
            <td>{{this}}</td>
            <td>{{lookup ../charts.planDistribution.data @index}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- User List Table -->
  <div class="section user-list">
    <h2>User & Subscription Details</h2>
    <table class="user-table">
      <thead>
        <tr>
          <th>User ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Address</th>
          <th>Plan Name</th>
          <th>Price</th>
          <th>Purchase Date</th>
          <th>GST (18%)</th>
          <th>Total Amount</th>
          <th>Status</th>
          <th>Renewal Date</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td>{{userId}}</td>
          <td>{{name}}</td>
          <td>{{email}}</td>
          <td>{{phone}}</td>
          <td>{{address}}</td>
          <td>{{planName}}</td>
          <td>{{formatCurrency price}}</td>
          <td>{{purchaseDate}}</td>
          <td>{{formatCurrency gst}}</td>
          <td>{{formatCurrency totalAmount}}</td>
          <td><span class="status-badge status-{{status}}">{{status}}</span></td>
          <td>{{renewalDate}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>


